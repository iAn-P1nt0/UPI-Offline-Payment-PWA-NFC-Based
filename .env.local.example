# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_APP_NAME=UPI Offline Pay
NEXT_PUBLIC_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# NPCI UPI Lite Compliance Limits
# -----------------------------------------------------------------------------
# Maximum transaction amount in INR (NPCI limit: ₹1,000)
NEXT_PUBLIC_MAX_TRANSACTION_AMOUNT=1000

# Maximum wallet balance in INR (NPCI limit: ₹5,000)
NEXT_PUBLIC_MAX_WALLET_BALANCE=5000

# Maximum daily transaction count (NPCI limit: 20)
NEXT_PUBLIC_MAX_DAILY_TRANSACTIONS=20

# Maximum offline transactions before mandatory sync (NPCI limit: 5)
NEXT_PUBLIC_MAX_OFFLINE_TRANSACTIONS=5

# Sync deadline in days (NPCI requirement: 4 days)
NEXT_PUBLIC_SYNC_DEADLINE_DAYS=4

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# JWT Secret for token signing (generate a random 32+ character string)
JWT_SECRET=your-jwt-secret-minimum-32-characters-long

# Encryption key identifier for Web Crypto API
NEXT_PUBLIC_ENCRYPTION_KEY_ID=upi-offline-v1

# Session timeout in minutes
NEXT_PUBLIC_SESSION_TIMEOUT=30

# Device fingerprint salt (generate a random string)
DEVICE_FINGERPRINT_SALT=your-device-fingerprint-salt

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable NFC payments (requires HTTPS and compatible device)
NEXT_PUBLIC_FEATURE_NFC_ENABLED=true

# Enable/disable QR code payments
NEXT_PUBLIC_FEATURE_QR_ENABLED=true

# Enable/disable biometric authentication (Phase 2)
NEXT_PUBLIC_FEATURE_BIOMETRIC_ENABLED=false

# Enable/disable merchant mode (Phase 2)
NEXT_PUBLIC_FEATURE_MERCHANT_MODE=false

# -----------------------------------------------------------------------------
# Upstash Redis (Phase 2 - Optional for now)
# -----------------------------------------------------------------------------
# Get these from: https://console.upstash.com/
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GA_MEASUREMENT_ID=
# SENTRY_DSN=

# -----------------------------------------------------------------------------
# Development/Testing
# -----------------------------------------------------------------------------
# Enable debug logging in development
NEXT_PUBLIC_DEBUG=false

# Mock NFC for testing on non-NFC devices
NEXT_PUBLIC_MOCK_NFC=false

# Mock payment gateway for testing
NEXT_PUBLIC_MOCK_PAYMENTS=false
